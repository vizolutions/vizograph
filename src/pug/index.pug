                                        i.fas.fa-plus.fa-3x
                                img.img-fluid(src='assets/img/portfolio/apex-sankey.jpg', alt='...')
                            .portfolio-caption
                                .portfolio-caption-heading Apex Sankey
                                .portfolio-caption-subheading.text-muted Sankey Diagrams
                    .col-lg-3.col-sm-6.mb-4
                        // Portfolio item 4
                        .portfolio-item
                            a.portfolio-link(data-bs-toggle='modal', href='#portfolioModal4')
                                .portfolio-hover
                                    .portfolio-hover-content
                                        i.fas.fa-plus.fa-3x
                                img.img-fluid(src='assets/img/portfolio/apex tree.jpg', alt='...')
                            .portfolio-caption
                                .portfolio-caption-heading Apex Tree
                                .portfolio-caption-subheading.text-muted Organizational Charts
